// common user details
enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

model User {
  id        String  @id @default(uuid())
  firstName String  @db.VarChar(200)
  lastName  String  @db.VarChar(200)
  email     String  @unique
  phone     String? @db.VarChar(20)
  password  String
  status    UserStatus @default(ACTIVE)

  isEmailVerified         Boolean   @default(false)
  emailVerificationToken  String?
  emailVerificationExpiry DateTime?

  tokenVersion Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roles         UserRole[]
  license       License[]
  prescriptions Prescription[]
  notifications Notification[]
  doctors       Doctor[]
  patients      Patient[]
  auditLogs     AuditLog[]
  stockAdjustments StockAdjustment[]
}

// user roles
model Role {
  id   Int    @id @default(autoincrement())
  name String @unique

  users UserRole[]
}

// user & related roles
model UserRole {
  userId String
  roleId Int
  status UserStatus @default(ACTIVE)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
}

// unique user tables
model Doctor {
  doctorId       String  @id
  specialization String  @db.VarChar(200)
  availability   Boolean @default(true) // default available
  workingHours   Json?
  bio            String? @db.Text
  qualifications String? @db.Text
  experience     Int?
  hospitals      Json?
  proficiency    Json?

  user         User          @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  appointments Appointment[]
  labReports   LabReport[]
}

enum Gender {
  MALE
  FEMALE
}

model Patient {
  patientId String   @id
  nic       String?   @db.VarChar(12)
  dob       DateTime @db.Date
  address   String?   @db.VarChar(200)
  gender    Gender
  bloodType String?  @db.VarChar(10)
  allergies String?  @db.Text
  conditions String? @db.Text

  user         User          @relation(fields: [patientId], references: [id], onDelete: Cascade)
  appointments Appointment[]
  bills        Bill[]
  labReports   LabReport[]
}

// user licence details
model License {
  userId      String  @id
  license_no  String  @db.VarChar(100)
  description String? @db.VarChar(200)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Pharmacy & Inventory
model MedicineCategory {
  categoryId  Int     @id @default(autoincrement())
  name        String  @unique
  description String? @db.VarChar(200)

  medicines Medicine[]
}

enum DosageTypes {
  mg
  ml
  drops
  capsule
  tablet
}

model DosageForms {
  dosageId    Int         @id @default(autoincrement())
  name        String      @unique // e.g. Tablet, Syrup, Oral Liquid ,Eye Drops
  defaultUnit DosageTypes

  medicines Medicine[]
}

model Medicine {
  medicineId  String  @id @default(uuid())
  name        String  @db.VarChar(200)
  description String? @db.VarChar(200)
  price       Decimal @db.Decimal(10, 2)
  stock       Int     @default(0)

  categoryId Int?
  dosageId   Int?

  medicineCategory  MedicineCategory?  @relation(fields: [categoryId], references: [categoryId], onDelete: SetNull)
  medicineDosage    DosageForms?       @relation(fields: [dosageId], references: [dosageId], onDelete: SetNull)
  inventoryLogs     InventoryLogs[]
  prescriptionItems PrescriptionItem[]

  // New POS Fields
  allowSplit  Boolean @default(true)
  
  batches     Batch[]
  unitConversions UnitConversion[]
  suppliers   Supplier[]
  billItems   BillItem[]
  stockAdjustments StockAdjustment[]
}

model Supplier {
  id          String   @id @default(uuid())
  name        String
  contactPerson String?
  email       String?
  phone       String?
  address     String?
  
  batches     Batch[]
  medicines   Medicine[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Batch {
  id              String    @id @default(uuid())
  batchNumber     String
  medicineId      String
  medicine        Medicine  @relation(fields: [medicineId], references: [medicineId])
  supplierId      String?
  supplier        Supplier? @relation(fields: [supplierId], references: [id])
  
  quantity        Int       // Current stock in Base Units (Tablets)
  originalQuantity Int      // Initial stock
  
  expiryDate      DateTime
  manufactureDate DateTime?
  unitCost        Decimal   @db.Decimal(10, 2)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  stockAdjustments StockAdjustment[]
  billItems        BillItem[]
  prescriptionItems PrescriptionItem[]
}

model UnitConversion {
  id          String @id @default(uuid())
  medicineId  String
  medicine    Medicine @relation(fields: [medicineId], references: [medicineId])
  unitName    String // "Box", "Card"
  multiplier  Int    // e.g. 400, 20
  barcode     String?
}

model StockAdjustment {
  id          String   @id @default(uuid())
  medicineId  String
  medicine    Medicine @relation(fields: [medicineId], references: [medicineId])
  batchId     String?
  
  batch       Batch?   @relation(fields: [batchId], references: [id])
  
  quantity    Int      // Positive (Return) or Negative (Wastage)
  reason      String   // "RETURN", "EXPIRED", "DAMAGED", "THEFT"
  notes       String?
  userId      String   
  user        User     @relation(fields: [userId], references: [id]) 
  createdAt   DateTime @default(now())
}

enum changeType {
  STOCK_IN
  SALE
  RETURN
  EXPIRED
  PRESCRIPTION_DISPENSED
  ADJUSTMENT
}

model InventoryLogs {
  inventoryLogId String     @id @default(uuid())
  medicineId     String?
  quantity       Int
  changeType     changeType
  expiryDate     DateTime?   @db.Date
  date           DateTime   @db.Date @default(now())
  status         Boolean    @default(false) // true check after exp

  medicine Medicine? @relation(fields: [medicineId], references: [medicineId], onDelete: SetNull)
}

// appointment details
enum AppointmentStatus {
  PENDING
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELED
}

model Appointment {
  appointmentId String            @id @default(cuid())
  patientId     String
  doctorId      String
  date          DateTime          @db.Date
  time          DateTime          @db.Time
  status        AppointmentStatus

  patient       Patient        @relation(fields: [patientId], references: [patientId], onDelete: Cascade)
  doctor        Doctor         @relation(fields: [doctorId], references: [doctorId], onDelete: Cascade)
  prescriptions Prescription[]
}

// prescription details
enum PrescriptionStatus {
  PENDING
  VERIFIED
  READY
  DISPENSED
  REJECTED
}

model Prescription {
  prescriptionId String             @id @default(uuid())
  appointmentId  String?
  userId         String
  notes          String?            @db.Text
  issuedAt       DateTime           @default(now())
  status         PrescriptionStatus @default(PENDING)

  appointment       Appointment?       @relation(fields: [appointmentId], references: [appointmentId], onDelete: Cascade)
  prescriptionItems PrescriptionItem[]
  user              User               @relation(fields: [userId], references: [id])
}

model PrescriptionItem {
  itemId         String    @id @default(uuid())
  prescriptionId String
  medicineId     String?
  medicineName   String? // if medicineId is null
  dosage         String?   @db.VarChar(100)
  duration       DateTime?
  instructions   String?   @db.Text

  prescription Prescription @relation(fields: [prescriptionId], references: [prescriptionId], onDelete: Cascade)
  medicine     Medicine?    @relation(fields: [medicineId], references: [medicineId], onDelete: SetNull)
  
  batchId      String?
  batch        Batch?       @relation(fields: [batchId], references: [id])
}

model Notification {
  notificationId String  @id @default(uuid())
  userId         String
  message        String  @db.Text
  isRead         Boolean @default(false)

  created_at DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Bills & Payments
enum PaymentStatus {
  PENDING
  PAID
  CANCELLED
}

enum BillType {
  APPOINTMENT
  LAB_TEST
  PHARMACY
}

model Bill {
  billId        String   @id @default(uuid())
  patientId     String
  invoiceNumber String   @unique // e.g. INV-2024-001
  amount        Decimal  @db.Decimal(10, 2)
  status        PaymentStatus @default(PENDING)
  type          BillType
  description   String?  @db.VarChar(200)
  issuedDate    DateTime @default(now())
  paidDate      DateTime?
  
  patient       Patient  @relation(fields: [patientId], references: [patientId], onDelete: Cascade)
  items         BillItem[]
}

model BillItem {
  id          String   @id @default(uuid())
  billId      String
  bill        Bill     @relation(fields: [billId], references: [billId], onDelete: Cascade)
  
  medicineId  String
  medicine    Medicine @relation(fields: [medicineId], references: [medicineId])
  
  batchId     String?
  batch       Batch?   @relation(fields: [batchId], references: [id])
  
  quantity    Int      // In Base Units
  unitPrice   Decimal  @db.Decimal(10, 2)
  totalPrice  Decimal  @db.Decimal(10, 2)
  
  name        String   // Snapshot of name
}

// Lab Reports
enum ReportStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  READY
}

enum PriorityLevel {
  NORMAL
  URGENT
}

model LabReport {
  reportId    String   @id @default(uuid())
  patientId   String
  doctorId    String?
  testType    String   @db.VarChar(200)
  status      ReportStatus @default(PENDING)
  priority    PriorityLevel @default(NORMAL)
  results     String?  @db.Text
  notes       String?  @db.Text
  orderedDate DateTime @default(now())
  completedDate DateTime?

  patient     Patient  @relation(fields: [patientId], references: [patientId], onDelete: Cascade)
  doctor      Doctor?  @relation(fields: [doctorId], references: [doctorId])
}

// System Settings
model SystemSettings {
  id                  Int     @id @default(autoincrement())
  hospitalName        String  @default("MediConnect Hospital")
  supportEmail        String  @default("support@mediconnect.com")
  maintenanceMode     Boolean @default(false)
  registrationEnabled Boolean @default(true)
  emailNotifications  Boolean @default(true)
  smsAlerts           Boolean @default(false)
  autoBackup          Boolean @default(true)
  
  hospitalAddress     String  @default("123 Health Avenue, Med City")
  hospitalPhone       String  @default("+1 (555) 123-4567")

  // Security Policy
  enforceStrongPassword Boolean @default(false)
  
  updatedAt           DateTime @updatedAt
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?  // Nullable if system action or unauthenticated attempt
  action    String   @db.VarChar(200) // e.g. "LOGIN", "UPDATE_SETTINGS"
  details   String?  @db.Text
  ipAddress String?  @db.VarChar(50)
  userAgent String?  @db.Text
  status    String   @default("SUCCESS") // SUCCESS, FAILED
  timestamp DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}
